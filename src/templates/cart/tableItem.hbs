{{#each this}}
  <tr>
    <td class='product-column'>
      <div class='main-cart__product'>
        <div class='main-cart__img-container'>
          <img src={{image}} alt={{name}} class='main-cart__img' />
        </div>
        <div class='cart-page__product-name'>
          <h3 class='main-cart__title'>{{name}}</h3>
          <span class='stock'></span>
        </div>
      </div>
    </td>
    <td class='table-row'>
      <div class='product__quantity table-row'>
        <span
          type='button'
          class='quantity minus'
          data-add='decrement'
          data-id={{id}}
        >-</span>
        <span class='product__total'>{{amount}}</span>
        <span
          type='button'
          class='quantity plus'
          data-add='increment'
          data-id={{id}}
        >+</span>
      </div>
    </td>
    <td class='table-row'>
      <h3 class='main-cart__title table-row'>{{price}}</h3>
    </td>
    <td class='table-row'>
      <h3 class='main-cart__title table-row one-product-total'></h3>
    </td>
    <td class='table-row'>
      <button
        type='button'
        class='main__remove-button'
        data-id={{id}}
        data-del='delete'
      >
        <svg
          class='cart-page__cross-img'
          aria-label='Кнопка меню'
          width='24'
          height='24'
          viewBox='0 0 32 32 '
          fill='none'
          xmlns='http://www.w3.org/2000/svg'
        >
          <path
            data-del='delete'
            data-id={{id}}
            d='M31.708 25.708 22 16l9.708-9.708a1 1 0 0 0 0-1.414L27.122.292a1 1 0 0 0-1.414-.001L16 9.999 6.292.291a.998.998 0 0 0-1.414.001L.292 4.878a1 1 0 0 0 0 1.414L10 16 .292 25.708a.999.999 0 0 0 0 1.414l4.586 4.586a1 1 0 0 0 1.414 0L16 22l9.708 9.708a1 1 0 0 0 1.414 0l4.586-4.586a.999.999 0 0 0 0-1.414z'
          ></path>
        </svg>
      </button>
    </td>
  </tr>
{{/each}}