{{#each this}}
  <li class='cart__item'>
    <img src={{image}} alt={{name}} class='cart__img' />
    <div class='cart__info'>
      <h5 class='cart__item-title'>{{name}}</h5>
      <span class='cart__item-price price'>${{price}}</span>
      <button
        type='button'
        class='cart__remove-button'
        data-id={{id}}
      >Remove</button>
    </div>
    <div class='cart__counter'>
      <button
        class='cart__counter-button decrement'
        type='button'
        data-id={{id}}
        data-add='decrement'
      ></button>
      <span class='cart__product-count'>{{amount}}</span>
      <button
        class='cart__counter-button increment'
        type='button'
        data-id={{id}}
        data-add='increment'
      ></button>
    </div>
  </li>
{{/each}}