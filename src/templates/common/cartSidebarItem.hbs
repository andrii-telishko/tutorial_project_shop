<li class='cart__item'>
  <img src={{image}} alt={{name}} class='cart__img' />
  <div class='cart__info'>
    <h5 class='cart__item-title'>{{name}}</h5>
    <span class='cart__item-price price'>${{price}}</span>
  </div>
  <div class='cart__counter'>
    <button class='cart__counter-button' type='button'>-</button>
    <span class='cart__product-count'>1</span>
    <button class='cart__counter-button' type='button'>+</button>
  </div>
</li>